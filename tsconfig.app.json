{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": [ "ES2020", "DOM", "DOM.Iterable" ],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [ "*" ],
      "@types/*": [ "types/*" ]
    }
  },
  "include": [ "src" ]
}
